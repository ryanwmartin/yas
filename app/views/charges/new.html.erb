<div class="container">
  <hr>
  <div class="row">
    <div class="col-md-3">

    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-primary">
          <h2 class="text-white text-center">Make a Donation</h2>
        </div>
        <div class="card-body text-center">
          <h3>We appreciate your contribution.</h3>
        </div>
        <div class="card-footer">
          <%= form_tag charges_path do %>

            <% if flash[:error].present? %>
              <div id="error_explanation">
                <p><%= flash[:error] %></p>
              </div>
            <% end %>
            <div class="form-group float-right">
              <span>Amount: <%= number_field_tag 'donation_amount', 10, min: 1 %></span>
              <%= link_to "Cancel", root_path, class:"btn btn-sm btn-outline-danger" %>

              <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                      data-key="test2343"
                      data-description="One Time Donation"
                      data-amount=""
                      data-locale="auto">
              </script>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
