<footer class="main-footer">
  <div class="container">
    <!--Widgets Section-->
    <div class="widgets-section">
      <div class="row clearfix">
        <!--Big Column-->
        <div class="big-column col-lg-5">
          <div class="row clearfix">
            <!--Footer Column-->
            <div class="footer-column col-md-7">
              <div class="footer-widget about-widget">
                <div class="footer-logo">
                  <figure>
                    <h1 class="text-white">Yas!</h1>  <!-- <a href="index.html"> <%= image_tag "footer-logo" %> </a> -->
                  </figure>
                </div>
                <div class="widget-content">
                  <div class="text">Supporting Young Adults as they Protect their Rights and Future.</div>
                  <ul class="social-icon-three">
                    <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                    <li><a href="#"><i class="fab fa-facebook"></i></a></li>
                    <li><%= link_to "https://www.youtube.com/channel/UCPWUP3nLtYpVOTWb38Rgu6g" do %>
                      <i class="fab fa-youtube"></i>
                    <% end %>
                    </li>
                  </ul>
                </div>
              </div>
            </div>

            <!--Footer Column-->
            <div class="footer-column col-md-5">
              <div class="footer-widget services-widget">
                <h2 class="widget-title">Projects we Support</h2>
                <div class="widget-content">
                  <ul class="list">
                    <li><%= link_to "Our Children's Trust", "https://www.ourchildrenstrust.org/donate-now"  %></li>
                    <li><%= link_to "youCAN", "https://www.ourchildrenstrust.org/learn-how-to-start-a-youcan-chapter"  %></li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!--Big Column-->
        <div class="big-column col-lg-7">
          <div class="row clearfix">
              <!--Footer Column-->
              <div class="footer-column col-md-7">
                <div class="footer-widget posts-widget">
                  <h2 class="widget-title">Recent Posts</h2>
                  <div class="widget-content">
                    <div class="contact-info-list">

                        <% @articles.each do |article| %>

                          <div>
                            <strong><%= link_to "#{article.title}", blog_path(article), class:"text-white" %></strong>
                          </div>
                          <div class="time">Posted: <%= article.date.strftime("%D") %></div>
                        <% end %>


                    </div>
                  </div>
                </div>
              </div>

              <!--Footer Column-->
              <div class="footer-column col-md-5">
                <div class="footer-widget contact-widget">
                  <h2 class="widget-title">Contact</h2>
                  <div class="widget-content">
                    <ul class="contact-info-list">
                      <li><i class="fas fa-map-marker-alt"></i>
                        4801 Glenwood Ave, Ste 200
                        Raleigh, NC 27612
                      </li>
                      <li><i class="fas fa-envelope-open"></i>
                        Email: info@youthactionsupport.org
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>

    <!--Footer Bottom-->
  <div class="footer-bottom">
    <div class="container">
      <div class="clearfix">
        <div class="float-sm-left">
          <div class="copyright-text">
            <p>Copyrights Â© 2019 Youth Action Support, Inc. All rights reserved.</p>
          </div>
        </div>
        <div class="float-sm-right">
          <ul>
            <!-- <li><a href="#">Privacy Policy</a></li>
            <li><a href="#">Terms of Use </a></li> -->
          </ul>
        </div>
      </div>
    </div>
  </div>
</footer>
