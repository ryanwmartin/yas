<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Visitors</h1>

  <table class="table">
    <thead>
      <tr>
        <th>First name</th>
        <th>Middle name</th>
        <th>Last name</th>
        <th>Donation Amount</th>
        <th>Project</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @visitors.each do |visitor| %>
        <tr>
          <td><%= visitor.first_name %></td>
          <td><%= visitor.middle_name %></td>
          <td><%= visitor.last_name %></td>
          <td><%= visitor.donation_amount %></td>
          <td><%= visitor.project %> </td>
          <td><%= link_to 'Show', visitor, class:"btn btn-secondary" %></td>
          <td><%= link_to 'Edit', edit_visitor_path(visitor), class:"btn btn-primary" %></td>
          <td><%= link_to 'Delete', visitor, class:"btn btn-danger",
            method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Visitor', new_visitor_path, class:"btn btn-primary" %>

  </div>
