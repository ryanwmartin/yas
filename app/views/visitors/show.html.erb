<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h1><%= link_to @visitor.full_name, edit_visitor_path(@visitor) %></h1>
        </div>
        <div class="card-body">
          <strong>Email: </strong>
          <%= mail_to @visitor.email %>
          <br>
          <strong>Project:</strong>
          <%= @visitor.project %>
          <br>
        </div>
      </div>
    </div>
  </div>
</div>
