<section class="news-section">
  <div class="container">
      <div class="row clearfix">
          <!--News Block-->
          <%- @articles.each do |article| %>
            <div class="news-block-one col-lg-4 col-md-6">
                <div class="inner-box">
                    <!-- <div class="image">
                        <img src="images/resource/news-1.jpg" alt="">
