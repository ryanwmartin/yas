                            <a class="link-btn" href="blog-details.html">
                                <i class="fa fa-link"></i>
                            </a>
                        </div>
                    </div> -->
                    <div class="lower-box">
                        <div class="date"> <%=  article.date.strftime("%d")%> <span> <%= article.date.strftime("%b") %></span></div>
                        <div class="post-meta">By: <span> <%= article.user.email %></span></div>
                        <h4> <%= link_to truncate("#{article.title.titleize}", length: 60 ), article %> </h4>
                        <div class="text">
                          <%= truncate("#{article.body}", length: 200) %>
                        </div>
                        <div class="read-more-btn">
                          <%= link_to "Read More", article, class:"read-more"%>
                        </div>
                    </div>
                </div>
            </div>
          <% end %>
          <!-- end -->
      </div>
